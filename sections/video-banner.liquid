<div class="video-banner w-full h-full">
  <div class="swiper video-banner-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide relative">
          <a href="{{ block.settings.button_link }}">
            {% if block.settings.img != blank %}
              {{ block.settings.img | image_url: height: '650' | image_tag }}
            {% endif %}
            <div class="absolute left-16 bottom-1/3">
              {% if block.settings.heading != blank and block.settings.subtitle != blank %}
                <div class="video-content flex flex-col">
                  {% if block.settings.heading != blank %}
                    <h2 class="video-heading h1 text-white">{{ block.settings.heading }}</h2>
                  {% endif %}
                  {% if block.settings.subtitle != blank %}
                    <p class="text-white">{{ block.settings.subtitle }}</p>
                  {% endif %}
                  {% if block.settings.shop_now != blank %}
                    <div class="video_btn">
                    <button class="green_btn">{{ block.settings.shop_now }}</button>
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video banner",
  "settings": [],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "image_picker",
          "label": "Add Image",
          "id": "img"
        },
        {
          "type": "text",
          "label": "Heading",
          "id": "heading",
          "default": "Get Educated On Skincare!"
        },
        {
          "type": "inline_richtext",
          "label": "Subtitle",
          "id": "subtitle",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        },
        {
          "type": "text",
          "label": "Button Label",
          "id": "shop_now",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "label": "Button Link",
          "id": "button_link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video Banner"
    }
  ]
}
{% endschema %}
